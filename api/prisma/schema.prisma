generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id         String     @id @default(cuid())
    email      String     @unique
    comments   Comment[]
    categories Category[]
    Rubric Rubric[]
    createdAt  DateTime   @default(now())
    updatedAt  DateTime   @updatedAt

    Feedback Feedback[]

    Tag Tag[]

    CommentTag CommentTag[]
}

model Comment {
    id        String   @id @default(cuid())
    title String?
    body      String
    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String
    category Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade)
    categoryId String
    isFavourite Boolean @default(false)
    useCount Int @default(0)
    lastUsedAt DateTime?
    keywords Json?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([userId])
    @@index([categoryId])
    CommentTag CommentTag[]
}

model Tag {
    id        String   @id @default(cuid())
    userId    String   @map("user_id")
    name      String
    createdAt DateTime @default(now()) @map("created_at")

    // Relations
    user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
    commentTags CommentTag[]

    @@unique([userId, name])
    @@map("tags")
}

model CommentTag {
    commentId String @map("comment_id")
    tagId     String @map("tag_id")
    userId    String @map("user_id") // Added for performance

    // Relations
    comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
    tag     Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)
    user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@id([commentId, tagId])
    @@index([userId, tagId])
    @@map("comment_tags")
}
model Category {
    id String @id @default(cuid())
    name String
    description String?
    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String
    comments Comment[]
    order Int @default(0)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([userId, name])
    @@index([userId])
}

model Rubric {
    id String @id @default(cuid())
    name String
    description String?
    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String
    imageURL String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([userId])
}

model Feedback {
    id String @id @default(cuid())
    title String
    comment String
    user User @relation(fields: [userId], references: [id])
    userId String
    createdAt DateTime @default(now())
}